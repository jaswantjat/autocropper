# Card Rectification API Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# BASIC FLASK SETTINGS
# =============================================================================

# Enable debug mode (true/false)
# DEBUG=false

# Enable testing mode (true/false)
# TESTING=false

# Host to bind the server to
# HOST=0.0.0.0

# Port to run the server on
# PORT=5000

# Flask environment (development/production/testing)
# FLASK_ENV=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for Flask sessions (REQUIRED in production)
# SECRET_KEY=your-super-secret-key-here

# Maximum file upload size in MB
# MAX_CONTENT_LENGTH_MB=16

# Allowed file extensions (comma-separated)
# ALLOWED_EXTENSIONS=png,jpg,jpeg,bmp

# =============================================================================
# FILE AND DIRECTORY SETTINGS
# =============================================================================

# Directory for uploaded files
# UPLOAD_FOLDER=/path/to/uploads

# Directory for temporary files
# TEMP_FOLDER=/path/to/temp

# Directory for result files
# RESULTS_FOLDER=/path/to/results

# =============================================================================
# MODEL SETTINGS
# =============================================================================

# Path to the trained model file
# MODEL_PATH=/path/to/CRDN1000.pkl

# Model architecture name
# MODEL_ARCH=UNetRNN

# Force CPU usage even if GPU is available (true/false)
# FORCE_CPU=false

# Model loading timeout in seconds
# MODEL_TIMEOUT=30

# =============================================================================
# PROCESSING PARAMETERS
# =============================================================================

# Image processing size (width in pixels)
# PROCESS_SIZE=1000

# Model input size (width in pixels)
# MODEL_INPUT_SIZE=1000

# Processing timeout in seconds
# PROCESSING_TIMEOUT=120

# Maximum allowed image dimension (pixels)
# MAX_IMAGE_DIMENSION=5000

# Minimum allowed image dimension (pixels)
# MIN_IMAGE_DIMENSION=100

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
# LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
# LOG_FILE=/path/to/logfile.log

# Log format string
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of worker processes
# WORKERS=1

# Worker timeout in seconds
# WORKER_TIMEOUT=120

# Keep alive timeout in seconds
# KEEP_ALIVE=2

# Maximum requests per worker before restart
# MAX_REQUESTS=1000

# Random jitter for max requests
# MAX_REQUESTS_JITTER=50

# =============================================================================
# CLEANUP SETTINGS
# =============================================================================

# Enable automatic cleanup of temporary files (true/false)
# AUTO_CLEANUP=true

# Cleanup interval in seconds
# CLEANUP_INTERVAL=3600

# Maximum age of temporary files in seconds
# TEMP_FILE_MAX_AGE=1800

# =============================================================================
# API SETTINGS
# =============================================================================

# API title for documentation
# API_TITLE=Card Rectification API

# API version
# API_VERSION=2.0.0

# API description
# API_DESCRIPTION=REST API for ID card rectification using deep learning

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable CORS for development (true/false)
# ENABLE_CORS=false

# Save debug images during processing (true/false)
# SAVE_DEBUG_IMAGES=false

# Directory for debug images
# DEBUG_IMAGE_FOLDER=/path/to/debug

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Development Configuration Example:
# DEBUG=true
# LOG_LEVEL=DEBUG
# SAVE_DEBUG_IMAGES=true
# ENABLE_CORS=true
# SECRET_KEY=dev-secret-key

# Production Configuration Example:
# DEBUG=false
# LOG_LEVEL=INFO
# SECRET_KEY=your-production-secret-key
# WORKERS=4
# LOG_FILE=/var/log/card-rectification.log
# UPLOAD_FOLDER=/var/uploads
# TEMP_FOLDER=/var/temp

# High Performance Configuration Example:
# WORKERS=4
# WORKER_TIMEOUT=180
# MAX_REQUESTS=2000
# PROCESSING_TIMEOUT=180
# FORCE_CPU=false

# Memory Constrained Configuration Example:
# WORKERS=1
# MAX_CONTENT_LENGTH_MB=8
# PROCESS_SIZE=800
# MODEL_INPUT_SIZE=800
# FORCE_CPU=true

# Security Focused Configuration Example:
# MAX_CONTENT_LENGTH_MB=10
# ALLOWED_EXTENSIONS=png,jpg
# AUTO_CLEANUP=true
# TEMP_FILE_MAX_AGE=900
# DEBUG=false
